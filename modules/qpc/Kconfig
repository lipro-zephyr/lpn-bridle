config ZEPHYR_QPC_MODULE
	bool

config QPC
	bool "Enable qpc state machine framework"
	help
	  This option enables the qpc state machine framework

if QPC
	comment "You have configured QPC"
	config QPC_NO_QASSERT
		bool "Disable QPC assertions"
		default y 
		help
		  This option disables the QPC assertions by introducing -DN_QASSERT as a global
		  compile time flag
endif # QPC
